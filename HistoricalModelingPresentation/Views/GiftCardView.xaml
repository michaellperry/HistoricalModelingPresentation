        			<Border Grid.Column="1" Margin="0" Grid.Row="2" d:LayoutOverrides="Width" >
        				<TextBlock TextWrapping="Wrap" Text="$12.47" Foreground="White" Margin="4,2"/>
        			</Border>
        		</Grid>
        	</Border>
        </Grid>
    </Viewbox>
</UserControl>
