        			<Grid.RowDefinitions>
        				<RowDefinition Height="0.38*"/>
        				<RowDefinition Height="Auto"/>
        			</Grid.RowDefinitions>
        			<Border Grid.Row="1" Background="{StaticResource DataOddBackgroundBrush}">
        				<TextBlock TextWrapping="Wrap" Foreground="White" Margin="2"><Run Text="456"/><LineBreak/><Run Text="-$15.00"/></TextBlock>
        			</Border>
        		</Grid>
        	</Border>
